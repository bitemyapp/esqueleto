    main-is: Spec.hs
    other-modules:
        Common.Test
        Common.Test.Models
        Common.Test.Import
        Common.Test.Select
        Common.Record
        PostgreSQL.MigrateJSON
        SQLite.Test
        PostgreSQL.Test
        MySQL.Test
    default-extensions:
        RankNTypes
    hs-source-dirs:
        test
    ghc-options: -Wall -threaded
    build-depends:
        base >=4.8 && <5.0
      , aeson
