        -Wall
        -Wno-redundant-constraints
        -Wincomplete-uni-patterns
        -Wincomplete-record-updates
        -Wpartial-fields
        -Wmissing-home-modules
        -Widentities
        -Wcpp-undef
        -Wcpp-undef
    default-language: Haskell2010

