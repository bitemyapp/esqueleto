      , persistent
      , persistent-mysql
      , persistent-postgresql
      , persistent-sqlite
      , postgresql-simple
      , QuickCheck
      , resourcet
      , tagged
      , template-haskell
      , text
      , time
      , transformers
      , unliftio
      , unordered-containers
